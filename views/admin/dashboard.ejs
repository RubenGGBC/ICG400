<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - ICG400</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar', { user: user }) %>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h1>Panel de Administración</h1>
                <p>Bienvenido, <%= user.username %></p>
            </div>

            <%- include('../partials/message') %>

            <div class="dashboard-stats">
                <div class="stat-card stat-primary">
                                        <div class="stat-info">
                        <h3><%= stats.totalCategories %></h3>
                        <p>Total Categorías</p>
                    </div>
                </div>

                <div class="stat-card stat-success">
                                        <div class="stat-info">
                        <h3><%= stats.activeCategories %></h3>
                        <p>Categorías Activas</p>
                    </div>
                </div>

                <div class="stat-card stat-info">
                                        <div class="stat-info">
                        <h3><%= stats.totalUsers %></h3>
                        <p>Usuarios Registrados</p>
                    </div>
                </div>

                <div class="stat-card stat-warning">
                                        <div class="stat-info">
                        <h3><%= stats.totalVotes %></h3>
                        <p>Total de Votos</p>
                    </div>
                </div>
            </div>

            <div class="admin-actions">
                <a href="/admin/categories/new" class="btn btn-primary">
                    Nueva Categoría
                </a>
                <a href="/admin/categories" class="btn btn-secondary">
                    Gestionar Categorías
                </a>
                <a href="/admin/results" class="btn btn-info">
                     Ver Resultados
                </a>
                <a href="/admin/users" class="btn btn-secondary">
                     Ver Usuarios
                </a>
            </div>

            <div class="section">
                <h2>Categorías Más Votadas</h2>
                <% if (stats.topCategories && stats.topCategories.length > 0) { %>
                    <div class="top-categories">
                        <% stats.topCategories.forEach((cat, index) => { %>
                            <div class="top-category-item">
                                <span class="rank">#<%= index + 1 %></span>
                                <div class="category-details">
                                    <h4><%= cat.title %></h4>
                                    <p><%= cat.totalVotes %> votos</p>
                                </div>
                                <a href="/admin/categories/<%= cat.id %>" class="btn btn-sm btn-secondary">
                                    Ver Detalles
                                </a>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p class="empty-state">No hay categorías con votos aún</p>
                <% } %>
            </div>

            <div class="section">
                <h2>Votos Recientes</h2>
                <% if (stats.recentVotes && stats.recentVotes.length > 0) { %>
                    <div class="recent-votes-list">
                        <% stats.recentVotes.forEach(vote => { %>
                            <div class="recent-vote-item">
                                <div class="vote-user">
                                    <strong><%= vote.user.username %></strong>
                                </div>
                                <div class="vote-category">
                                    votó en: <strong><%= vote.category.title %></strong>
                                </div>
                                <div class="vote-time">
                                    <%= new Date(vote.votedAt).toLocaleString('es-ES', {
                                        month: 'short',
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p class="empty-state">No hay votos recientes</p>
                <% } %>
            </div>
        </div>
    </main>

    <footer class="footer">
        <p>&copy; 2026 ICG400 Sistema de Votación</p>
    </footer>

    <script src="/js/admin.js"></script>
</body>
</html>
